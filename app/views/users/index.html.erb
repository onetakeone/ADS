<hh>MANAGE USERS</hh>
<div class="container">
 	<div class="row justify-content-md-center">
  		<% @users.each do |u| %>
    		<div class="col-md-auto">
    		<p class="mb-4">			
				<h3>user:</h3> <hu>| <%= u.username.capitalize %></hu>
				<h3>role:</h3> <hu>| <i><%= u.role %></i></hu>
				</p>
				<% if can? :edit, u %>
					<br><button type="button" class="btn btn-primary btn-sm">
						<%= link_to 'Change role', controller: :users, action: :edit, id: u.id %>
					</button>
				<% end %> 			
			</div>
		<% end %>
	</div>
</div>
hh 
	= @types.find(@ad.type_id).ad_type 
hu 
	i by: 
	|
	b = @users.find(@ad.user_id).username

div class="container"
	div class="row justify-content-md-center"
		div class="col-md-auto"
			p id="notice"
				= notice
			h2
				= @ad.state.upcase
			h1
				b
					= @ad.title
			p class="mb-4"
				= @ad.body
			p
				img src="#{@ad.image}"
			- if can? :manage, @ad
				= link_to 'Edit', edit_ad_path(@ad)
			= link_to '| Back', :back 
	
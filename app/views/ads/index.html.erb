<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto">
      <h1>Advertisements</h1>
      <p id="notice" class="mb-5"><%= notice %></p>
    </div>
 </div>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <% @ads.each_with_index do |ad, i| %>
      <div class="col-md-auto">
        <h2><%= i+1 %> <%= @types.find(ad.type_id).ad_type %> </h2>
        <p class="mb-0"><b><%= ad.title %></b></p>
        <p class="mb-4"><%= ad.body %></p>   
        <p><i>created by: <b><%= @users.find(ad.user_id).username %></b> </i> </p> 

        <p>
        <% if can? :read, ad %>
          <%= link_to 'Show', ad %> | 
        <% end%>
        <% if can? :update, ad %> 
          <%= link_to 'Edit', edit_ad_path(ad) %> |
        <% end %> 
        <% if can? :destroy, ad %>
          <%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </p>  
      </div>
    <% end %>
  </div>
</div>



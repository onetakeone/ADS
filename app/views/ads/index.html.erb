<p id="notice"><%= notice %></p>

<h1>Ads</h1>
<% @ads.each_with_index do |ad, i| %>
  <h2><%= i+1 %></h2>
  <p><b><%= ad.title %></b></p>
  <p><%= ad.body %></p>   
  <p><i>created by: <b><%= @users.find(ad.user_id).username %></b> </i></p>  
  <p><%= link_to 'Show', ad %> | <%= link_to 'Edit', edit_ad_path(ad) %> | <%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>

<br>
